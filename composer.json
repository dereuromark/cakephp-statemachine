{
    "name": "spryker/cakephp-statemachine",
    "description": "CakePHP StateMachine Plugin by Spryker Systems GmbH",
    "type": "cakephp-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "Spryker Systems GmbH",
            "homepage": "https://spryker.com"
        }
    ],
    "require": {
        "ext-json": "*",
        "ext-simplexml": "*",
        "php": ">=7.1",
        "cakephp/cakephp": "^3.7",
        "cakephp/migrations": "^2.0",
        "dereuromark/cakephp-dto": "@stable",
        "dereuromark/cakephp-tools": "@stable",
        "phpdocumentor/graphviz": "@stable"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0.0",
        "spryker/code-sniffer": "@stable",
        "phpstan/phpstan-shim": "^0.11"
    },
    "autoload": {
        "psr-4": {
            "StateMachine\\": "src/",
            "StateMachine\\Test\\Fixture\\": "tests/Fixture/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "StateMachine\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/",
            "App\\": "tests/test_app/src/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage" : "phpunit --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
        "phpstan": "vendor/bin/phpstan.phar analyse -c tests/phpstan.neon -l 7 src/",
        "cs-check": "vendor/bin/phpcs --colors --standard=config/ruleset.xml -s -p --ignore=/config/Migrations/,/src/Dto/ src/ tests/ config/",
        "cs-fix": "vendor/bin/phpcbf --colors --standard=config/ruleset.xml -p --ignore=/config/Migrations/,/src/Dto/ src/ tests/ config/"
    }
}
