{
    "name": "spryker/cakephp-statemachine",
    "description": "CakePHP StateMachine Plugin",
    "type": "cakephp-plugin",
    "license": "proprietary",
    "authors": [
        {
            "name": "Spryker Systems GmbH",
            "homepage": "https://spryker.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "cakephp/cakephp": "^4.0",
        "dereuromark/cakephp-dto": "^1.0",
        "dereuromark/cakephp-tools": "^2.0",
        "phpdocumentor/graphviz": "@stable"
    },
    "require-dev": {
        "dereuromark/cakephp-ide-helper": "^1.0",
        "cakephp/migrations": "^3.0",
        "phpunit/phpunit": "^8.5",
        "spryker/code-sniffer": "@stable",
        "phpstan/phpstan": "^0.12"
    },
    "autoload": {
        "psr-4": {
            "StateMachine\\": "src/",
            "StateMachine\\Test\\Fixture\\": "tests/Fixture/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "StateMachine\\Test\\": "tests/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests/",
            "App\\": "tests/test_app/src/"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage" : "vendor/bin/phpunit --log-junit tmp/coverage/unitreport.xml --coverage-html tmp/coverage --coverage-clover tmp/coverage/coverage.xml",
        "stan": "vendor/bin/phpstan analyse -c tests/phpstan.neon -l 7 src/",
        "cs-check": "vendor/bin/phpcs --colors --standard=config/ruleset.xml -s -p --ignore=/config/Migrations/,/src/Dto/ src/ tests/ config/",
        "cs-fix": "vendor/bin/phpcbf --colors --standard=config/ruleset.xml -p --ignore=/config/Migrations/,/src/Dto/ src/ tests/ config/"
    }
}
